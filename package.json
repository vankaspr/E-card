{
  "name": "happy-birthday-eva",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Персональное поздравление для Евы",
  "author": "Vanny msvankaspr@gmail.com",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "jest",
    "format": "prettier --write \"**/*.{html,js,css,md}\"",
    "build-linux": "electron-builder --linux",
    "build-win": "electron-builder --win",
    "build-all": "electron-builder -wl"

  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "jest": "^29.3.1",
    "prettier": "^3.6.2"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "htmlWhitespaceSensitivity": "css"
  },
  "dependencies": {
    "electron-reloader": "^1.2.3"
  },
  "build": {
    "appId": "com.example.happybirthday",
    "files": [
      "**/*",
      "!node_modules/**"
    ],
    "win": {
      "target":  "portable",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "build/icon.png"
    }
  }
}
