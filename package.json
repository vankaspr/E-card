{
  "name": "happy-birthday-eva",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "jest",
    "format": "prettier --write \"**/*.{html,js,css,md}\""
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "jest": "^29.3.1",
    "prettier": "^3.6.2"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "htmlWhitespaceSensitivity": "css"
  },
  "dependencies": {
    "electron": "^37.2.6",
    "electron-reloader": "^1.2.3"
  },
  "build": {
    "appId": "com.example.happybirthday",
    "files": [
      "**/*",
      "!node_modules/**"
    ],
    "win": {
      "target": "portable",
      "icon": "icon/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon/icon.png"
    }
  }
}
